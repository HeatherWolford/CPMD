<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:showIn="@layout/activity_detail"
    tools:context="com.java2.heatherwolford.cpmdweek1.DetailActivity">

    <TextView
        android:id="@+id/item_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/name_of_item"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/default_item_name"
        android:textStyle="normal"
        android:layout_alignEnd="@+id/item_label"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/quantity_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/quantity_label"
        android:textStyle="bold"
        android:layout_alignTop="@+id/item_label"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/default_quantity"
        android:textStyle="normal"
        android:layout_alignEnd="@+id/quantity_label"
        android:layout_marginTop="120dp"/>

</RelativeLayout>